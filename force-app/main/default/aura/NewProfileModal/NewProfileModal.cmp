<aura:component>
	<aura:attribute name="fields" type="List" default="['Name','Email']" />
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />

	<div>
		<div class="" style="height: 640px;">
			<section role="dialog" tabindex="-1" aria-labelledby="modal-create-profile" aria-modal="true" aria-describedby="modal-content-create-profile" class="slds-modal slds-fade-in-open">
				<div class="slds-modal__container">
					<header class="slds-modal__header">
						<!--
						<button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close">
							<svg class="slds-button__icon slds-button__icon_large" aria-hidden="true">
							<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#close" />
							</svg>
							<span class="slds-assistive-text">Close</span>
						</button>
						-->
						
						<h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Create Profile</h2>
					</header>
					<div class="slds-modal__content slds-p-around_medium" id="modal-content-create-profile">
						<lightning:recordEditForm objectApiName="Contact">
							<lightning:layoutItem size="12" padding="around-small">
								<lightning:messages/>
							</lightning:layoutItem>
							<lightning:layout multipleRows="true">
								<aura:iteration items="{!v.fields}" var="field">
									<lightning:layoutItem size="12" padding="around-small">
										<lightning:inputField fieldName="{!field}"/>
									</lightning:layoutItem>
								</aura:iteration>
							</lightning:layout>
						</lightning:recordEditForm>
					</div>
					<footer class="slds-modal__footer">
						<!--<button class="slds-button slds-button_neutral">Cancel</button>
						<button class="slds-button slds-button_brand">Save</button>-->
						<lightning:button label="Cancel" name="cancel"/>
						<lightning:button type="submit" label="Save" name="save" variant="brand"/>
					</footer>
				</div>
			</section>
			<div class="slds-backdrop slds-backdrop_open"></div>
		</div>
	</div>
</aura:component>	
